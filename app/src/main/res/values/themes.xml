<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Finances" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="buttonStyle">@style/NotCapsButton</item>
        <item name="colorPrimaryDark">@color/Widget1</item>
        <item name="colorPrimary">@color/MMM_purple</item>
        <item name="colorPrimaryVariant">@color/MMM_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Widget2</item>
        <item name="colorSecondaryVariant">@color/Widget2text</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:actionMenuTextColor">@color/MMM_purple</item>
        <!-- Status bar color. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/diagramText</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@color/background_main</item>
        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">@color/black</item>
        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/black</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@color/black</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@color/ErrorText</item>

    </style>


    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.Finances.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Finances.AppBarOverlay" parent="Theme.Finances" />
    <style name="Theme.Finances.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>