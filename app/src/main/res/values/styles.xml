<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <!-- <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item> -->
        <item name="android:background">@color/purple_500</item>
    </style>

    <style name="SplashTheme" parent= "Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">#B2AAE8</item>
    </style>

    <style name="EnterTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/hole</item>
    </style>

    <style name="BlockHome" >
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:background">@drawable/block_background</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text</item>
    </style>

    <style name="TextView.Primary.Header">
        <item name="android:textAppearance">@style/Text.Primary.Header</item>
    </style>

    <style name="Text.Primary.Header">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Primary.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Primary.Bold">
        <item name="android:textAppearance">@style/Text.Primary.Bold</item>
    </style>

    <style name="TextView.Primary">
        <item name="android:textAppearance">@style/Text.Primary</item>
    </style>

    <style name="TextView.Secondary">
        <item name="android:textAppearance">@style/Text.Secondary</item>
    </style>

    <style name="Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Primary">
        <item name="android:textColor">@color/diagramText</item>
    </style>

    <style name="Text.Secondary">
        <item name="android:textColor">@color/gray_dove_light</item>
    </style>


    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/DivideLine</item>
    </style>

    <style name="DivideListElement">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/DivideLineList</item>
    </style>

    //Кнопки маленькие буквы
    <style name="NotCapsButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_lesson_text">
      <item name="android:gravity">left</item>
        <item name="textAllCaps">false</item>
        <item name="textColor">@color/gray_dove_light</item>
        <item name="android:textSize">25dp</item>

    </style>

    <style name="LessonDateButton">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:backgroundTint">@color/buttonbackground_gray_light</item>
        <item name="android:background">@drawable/buttonbackground_1</item>
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/buttontext_1</item>
        <item name="android:editTextColor">@color/buttontext_1</item>

    </style>

    <style name="ClearButton">
        <item name="android:background">@drawable/buttonbackground_1</item>
    </style>
</resources>