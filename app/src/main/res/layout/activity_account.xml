<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="unique_tag_1"
    tools:context=".ui.Account">


    <ImageButton
        android:id="@+id/CloseAccount"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@null"
        android:src="@drawable/close_lesson"
        android:tint="@color/diagramText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.finances.helpclasses.SquaredConstraintLayout
        android:id="@+id/ProfileImageLayout"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/name"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ProfileImage"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:gravity="center"
            android:src="@drawable/no_avatar"
            app:civ_border_color="@color/MMM_purple"
            app:civ_border_width="2dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <ImageButton
            android:id="@+id/FirstPhotoButton"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:background="@drawable/round_background"
            android:backgroundTint="@color/transparent"
            app:layout_constraintBottom_toBottomOf="@+id/ProfileImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ProfileImage" />


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/ProfileImage"
            app:layout_constraintEnd_toEndOf="@+id/ProfileImage"
            app:layout_constraintStart_toStartOf="@+id/ProfileImage"
            app:layout_constraintTop_toTopOf="@+id/ProfileImage" />
    </com.example.finances.helpclasses.SquaredConstraintLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/Nickname_title"
        android:textColor="@color/Widget2text"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfileImageLayout" />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nickname"
        android:textColor="@color/gray_dove_light"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="@+id/name"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/edutext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="University"
        android:textColor="@color/gray_dove_light"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/name"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/nickname" />


    <ImageButton
        android:id="@+id/finishedCrsBt"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/list_black_24dp"
        android:tint="@color/diagramText"
        app:layout_constraintEnd_toStartOf="@+id/view3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="@color/diagramText"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/finishedCrsBt"
        app:layout_constraintStart_toStartOf="@+id/finishedCrsBt"
        app:layout_constraintTop_toBottomOf="@+id/finishedCrsBt" />

    <ImageButton
        android:id="@+id/settingsbtacc"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/outline_settings_24"
        android:tint="@color/diagramText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="@color/diagramText"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="@+id/settingsbtacc"
        app:layout_constraintStart_toStartOf="@+id/settingsbtacc"
        app:layout_constraintTop_toBottomOf="@+id/settingsbtacc" />

    <View
        android:id="@+id/view3"
        android:layout_width="2dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:background="@color/diagramText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edutext" />

    <View
        android:id="@+id/view4"

        style="@style/DivideListElement"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <TextView
        android:id="@+id/myAwardsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="My awards"
        android:textColor="@color/diagramText"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4" />

    <Button
        android:id="@+id/viewall"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="view all"
        android:textAllCaps="false"
        android:textColor="@color/gray_dove_light"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/myAwardsText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/myAwardsText" />


</androidx.constraintlayout.widget.ConstraintLayout>
